{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "dist",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "transform": "ts-transform-paths",
        "afterDeclarations": true
      }
    ]
  }
}
